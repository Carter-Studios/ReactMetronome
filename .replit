modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Metronome"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build for GitHub"

[[workflows.workflow]]
name = "React Metronome"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx react-scripts --openssl-legacy-provider start --port 5000 --host 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "Build for GitHub"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf docs/* && npx react-scripts --openssl-legacy-provider build && cp -r build/* docs/ && touch docs/.nojekyll"

[deployment]
run = ["sh", "-c", "npm install && npm start"]

[[ports]]
localPort = 5000
externalPort = 80
